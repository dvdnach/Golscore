<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_1dp"
    android:paddingBottom="@dimen/margin_1dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardCategoriaCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/cambioLocalLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/background_equipos">
                <ImageView
                    android:layout_width="@dimen/image_45dp"
                    android:layout_height="@dimen/image_45dp"
                    android:padding="@dimen/margin_5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cambios"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/cambioSaleLocalTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/cambioEntraLocalTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cambioVisitanteLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/background_equipos">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/cambioSaleVisitanteTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/cambioEntraVisitanteTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/image_45dp"
                    android:layout_height="@dimen/image_45dp"
                    android:padding="@dimen/margin_5dp"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cambios"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
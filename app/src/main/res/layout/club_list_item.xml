<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_2dp"
    android:paddingBottom="@dimen/margin_2dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardCategoriaCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/clubLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/background_equipos">
            <ImageView
                android:layout_width="@dimen/image_45dp"
                android:layout_height="@dimen/image_45dp"
                android:padding="@dimen/margin_5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_equipos"/>
            <TextView
                android:id="@+id/nombreClubTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>